.collection_item{
  transition: 0.2s;
  display: inline-flex;
  height: 120rpx;
  text-align: start;
  font-size: 35rpx;
  font-weight: 500;
  width: 680rpx;
  align-items: center;
  background-color: #ffffff;
  border-bottom: solid 1rpx #cecece;
}
.touch{
  transition: 0.2s;
  background-color: rgb(230,230,230);
  display: inline-flex;
  height: 120rpx;
  text-align: start;
  font-size: 35rpx;
  width: 680rpx;
  font-weight: 700;
  align-items: center;
}
.icon_box{
  margin-left: 30rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 20%;
  width: 90rpx;
  height:90rpx;
}
.icon{
  width: 46rpx;
  height: 45rpx;

}
.text{
  padding-left: 40rpx;
  width:510rpx;
}
.arrow{
  width: 35rpx;
  transform: rotate(180deg) translateX(30rpx);
}