/* components/ReadingList.wxss */


.content-item{
  transition: 1s ;
  left: 10vw;
  display: flex;
  justify-content: center;
  position: relative;
  margin-right:20vw;
  background-color: #ffffff;
  height: 70vh;
  width:80vw;
  margin-top: 10vh;
  border-radius: 40rpx;
}
.content-item_view{
  transition: 1s;
  display: flex;
  justify-content: center;
  flex-shrink: 0;
  margin-right:20vw;
  background-color: #ffffff;
  height: 80vh;
  width:100vw;
  margin-top: 15vh;
  border-radius: 40rpx;

}

.image_box{

  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 120rpx;
  display: inline-block;
  height:300rpx;
}
.image{
  transition: 1s;
  border-radius: 40rpx;
  width: 400rpx;
}
.image_view{
  border: royalblue solid 2rpx;
margin-left: -300rpx;
margin-top: -100rpx;
  transition: 1s;
  border-radius: 100rpx;
  width: 200rpx;
  height: 200rpx;
}
.BookName{
  transition: 1s ;
  position: absolute;
  top:700rpx;
  font-size: 60rpx;
  font-weight: 800;
  padding: 20rpx;
  border-radius: 40rpx;
}
.BookName_view{
  transition: 1s;
  position: absolute;
  top:230rpx;
  width: 300rpx;
  transform: translateX(140rpx);
  font-size: 60rpx;
  font-weight: 800;
  padding: 40rpx;
  border-radius: 80rpx;
  background-color: #f5f5f5;
}
.lines{
  color: rgba(255, 255, 255, 0);
  width: 450rpx;
  height: 800rpx;
  position: absolute;
}
.lines_view{
  transition:1s 1s;
  width: 450rpx;
  height: 800rpx;
  font-size: 30rpx;
  position:absolute;
  top:500rpx;
  text-indent: 40rpx;
  overflow-y: auto;
  z-index: 3;
}
.ViewMore{
  transition: 1s;
  position: absolute;
  top:900rpx;
  font-size: 60rpx;
  font-weight: 800;
  padding: 40rpx;
  border-radius: 60rpx;
  color: #ffffff;
  background-color: #0095ff;
  box-shadow: 5rpx 5rpx 5rpx rgb(165, 165, 163);
  z-index: 2;
}

.Close{
  transition: 1s;
  position: absolute;
  top:1400rpx;
  font-size: 60rpx;
  font-weight: 800;
  padding: 40rpx;
  border-radius: 60rpx;
  color: #ffffff;
  background-color: #0095ff;
  z-index: 2;
  box-shadow: 5rpx 5rpx 5rpx rgb(165, 165, 163);
}

.more{
  position: absolute;
  transform: translateY(-1130rpx) translateX(560rpx);
  width: 60rpx;
  height: 60rpx;
  z-index: 2;
}

.star{
  position: absolute;
  transform: translateY(-1140rpx)  translateX(100rpx);
  height: 80rpx;
  width:80rpx;
  z-index: 2;
}

.star_no{
  display: none;
  position: absolute;
  transform: translateY(-1140rpx)  translateX(100rpx);
  height: 80rpx;
  width:80rpx;
  z-index: 2;
}
.more_no{
  position: absolute;
  transform: translateY(-1130rpx) translateX(560rpx);
  width: 60rpx;
  height: 60rpx;
  z-index: 2;
}

.none{
  display: none;
}
.index{
  z-index: 2;
}




