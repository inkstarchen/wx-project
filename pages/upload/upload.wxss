/* pages/upload/upload.wxss */
page{
  background-color: #f5f5f5;
}
.main{
  padding-top: 200rpx;
}
.form{
  background-color: #ffffff;
  width: 90vw;
  padding-top: 40rpx;
  margin-left: 5vw;
  height:auto;
  border-radius: 20rpx;
  padding-bottom: 40rpx;
  box-shadow: 10rpx 10rpx 10rpx rgb(182, 182, 182);
}
input{
  text-align: right;
  width: 380rpx;
  height: 60rpx;
  display: inline-flex;
  box-sizing: border-box
}
label{
  font-size: larger;
  padding-left: 50rpx;
  color: #929191;
  font-weight: 400;
  display: inline-flex;
  width: 200rpx;
  height: 50rpx;
}
.button{
  align-items: center;
  text-align: center;
  color: #FFFFFF;
  border-radius: 25rpx;
  margin-top: 60rpx;
  margin-bottom:40rpx;
  width:50%;
  height: 100rpx;
  /* z-index:666; */
  bottom:15rpx;
  display: -webkit-flex;
  justify-content:center;
  background-color: #259dff;
}
.form_border{
  height: 80rpx;
}
.form_border1{
  height: auto;
}
.form_border1 label{
  margin-bottom: 40rpx;
}