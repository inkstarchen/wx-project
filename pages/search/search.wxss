/* pages/search/search.wxss */
.searchBox{
  display: flex;
  margin-top:30rpx;
  margin-left:30rpx;
  margin-right:30rpx;
  margin-bottom:60rpx;
  border-radius: 10rpx;
  border-style: solid;
  border-width: 1rpx;
  background-color: #f5f5f5;
  height: 100rpx;
}
.searchIcon{
  margin: 10rpx;
  padding-left: 10rpx;
  margin-top: 30rpx;
}
.searcher{
  width:40rpx;
  height:40rpx;
}
.searchIt{
margin-top: 30rpx;
}


.button {
  margin-top: 50px;
  width:10px;
  height: 50px;
  border-radius: 500px;
  background-color: #4A4A4A;
  display: flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
  transition: background-color 0.3s;
  border: none;
  outline: none;
}



.button:hover {
  background-color: #808080;
}

.plus {
  font-size: 36px;
  color: white;
}
