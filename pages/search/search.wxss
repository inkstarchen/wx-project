/* pages/search/search.wxss */
page{
  background-color: #f5f5f5;
}

.searchback{
  display: flex;
  text-align: center;
  padding-top: 50rpx;
  background-color: #00E0FF;
  height: 250rpx;
  border-bottom-left-radius: 20%;
  border-bottom-right-radius: 20%;
  overflow: hidden;
  box-shadow: 0rpx 10rpx 10rpx #b9cbce;
}

.searchBox{
  margin-top: 100rpx;
  display: flex;
  margin-left: 70rpx;
  border-radius: 50rpx;
  background-color: #f5f5f5;
  height: 100rpx;
  z-index: 1;
}
.searchIcon{
  margin: 10rpx;
  padding-left: 10rpx;
  margin-top: 30rpx;
}
.searcher{
  width:40rpx;
  height:40rpx;
}
.searchIt{
  width: 550rpx;
  margin-top: 30rpx;
}

.button{
  height: 120rpx;
  width: 120rpx;
  display: flex;
  position: absolute;
  left: 2vw;
  top:30rpx;
  justify-content: center;
  align-items: center;
  color: white;
  border-radius: 100%;
  font-size: 100rpx;
  padding-bottom: 10rpx;
}
.main{
  padding-bottom: 200rpx;
}