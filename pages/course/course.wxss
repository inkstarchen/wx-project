/* pages/course/course.wxss *//* pages/user/user.wxss */
.main{
  padding-top: 100rpx;
  background-color: #f5f5f5;
}

.favor{
  position: absolute;
  left: 500rpx;
  top:300rpx;
}
.info_box image {
  z-index: 0;
}
.info_box{
  width: 100%;
  top:0;
  position: absolute;
  z-index: 0;
  flex-direction: row;
  display: flex;
  height: 45vh;
}

.image_box{
  z-index: 0;
  width: 300rpx;
  border-radius:100%;
  height: 300rpx;
  overflow: hidden;
  margin: 60rpx;
  border: solid rgb(182, 182, 182) 5rpx;
}

.image_box image{
  height: 300rpx;
  width: 300rpx;
}
.name_box{
  font-size: 80rpx;
  position: relative;
  top:-50rpx;
  width: 600rpx;
  left: 10vw;
}
.info{
  text-indent: 40rpx;
  padding: 40rpx;
  height: auto;
  width: 570rpx;
  margin-left: 55rpx;
  background-color: #ffffff;
  border-radius: 40rpx;
}

.info::before{
  content: "| ";
  color: #6EB6FF;
  font-weight:bolder;
}

.detail{
  position: absolute;
  top:40vh;
  z-index: 1;
  border-top-left-radius: 100rpx;
  border-top-right-radius:100rpx ;
  padding-top: 120rpx;
  background:linear-gradient(135deg,#E0FCFF,#90F2FF,#6EB6FF);
}
.late-content {
  margin-left: 70rpx;
  display: inline-flex;
  margin-top: 40rpx;
}







