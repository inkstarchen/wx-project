/* pages/course/course.wxss *//* pages/user/user.wxss */
.main{
  background-color: #f5f5f5;
}
.info_box{
  width: 100%;
  flex-direction: row;
  display: flex;
  height: 450rpx;
}

.image_box{
  width: 300rpx;
  border-radius:100%;
  height: 300rpx;
  overflow: hidden;
  margin: 60rpx;
  border: solid rgb(182, 182, 182) 5rpx;
}

.image_box image{
  height: 300rpx;
  width: 300rpx;
}
.name_box{
  display: flex;
  text-align: center;
  align-items: center;
  font-weight: 700;
  font-size:60rpx;
  width: 350rpx;
  height: 400rpx;

}
.info{
  text-indent: 40rpx;
  padding: 40rpx;
  height: auto;
  width: 570rpx;
  margin-left: 55rpx;
  background-color: #ffffff;
  border-radius: 40rpx;
}

.info::before{
  content: "| ";
  color: #6EB6FF;
  font-weight:bolder;
}

.detail{
  border-top-left-radius: 100rpx;
  border-top-right-radius:100rpx ;
  padding-top: 120rpx;
  background:linear-gradient(135deg,#E0FCFF,#90F2FF,#6EB6FF);
}
.late-content {
  margin-left: 70rpx;
  display: inline-flex;
  margin-top: 40rpx;
}







