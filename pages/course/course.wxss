/* pages/course/course.wxss *//* pages/user/user.wxss */
.main{
  padding-top: 100rpx;
  background-color: #f5f5f5;
}

.favor{
  position: absolute;
  left: 500rpx;
  top:300rpx;
}
.info_box image {
  position: absolute;
  z-index: 0;
}
.info_box{
  width: 100%;
  top:0;
  position: absolute;
  z-index: 0;
  flex-direction: row;
  display: flex;
  height: 45vh;
}

.image_box{
  z-index: 0;
  width: 300rpx;
  border-radius:100%;
  height: 300rpx;
  overflow: hidden;
  margin: 60rpx;
  border: solid rgb(182, 182, 182) 5rpx;
}

.image_box image{
  height: 300rpx;
  width: 300rpx;
}
.name_box{
  font-size: 50rpx;
  position: relative;
  top:-50rpx;
  width: 600rpx;
  left: 10vw;
}
.info{

  text-indent: 40rpx;
  padding: 40rpx;
  height: auto;
  width: 570rpx;
  margin-left: 55rpx;
  background-color: #ffffff;
  border-radius: 40rpx;
}

.info::before{
  content: "| ";
  color: #6EB6FF;
  font-weight:bolder;
}

.detail{
  box-shadow: 0rpx -5rpx 20rpx rgb(189, 189, 189);
  position: absolute;
  width: 100%;
  top:40vh;
  z-index: 1;
  border-top-left-radius: 100rpx;
  border-top-right-radius:100rpx ;
  padding-top: 120rpx;
  background-color: #f5f5f5;
}
.late-content {
  margin-left: 60rpx;
  padding-left: 30rpx;
  margin-top: 90rpx;
  width: 800rpx;
  overflow: hidden;
  height: 500rpx;
}

.item{
  box-shadow: -20rpx 20rpx 30rpx #cfcece;
  display: inline-block;
  min-width: 300rpx;
  height: 200rpx;
  margin: 10rpx;

}
.item:nth-child(1){
  background-color: #00E0FF;
}
.item:nth-child(2){
  background-color: #A1EAFB;
}
.item:nth-child(3){
  background-color: #EDB1F1;
}
.item:nth-child(4){
  background-color: #FDFDFD;
}

.item text{
  position: absolute;
}

.Number{
  transform: translateX(60rpx) translateY(10rpx);
  font-size: 90rpx;
}

.a{
  font-size: 50rpx;
  font-weight: 500;
  transform: translateX(170rpx) translateY(40rpx);
}

.name{
  font-size: 35rpx;
  font-weight: 500;
  transform: translateX(60rpx) translateY(120rpx);
}







