.main{
  text-align: center;
  align-items: center;
  padding-top: 200rpx;
  overflow: hidden;
  background-color: #f5f5f5;
}
.profile{
  display: inline-block;
  margin-bottom: 10vh;
}
.profile_photo{
  left: 6vw;
  position: relative;
  background-color: rgb(255, 255, 255);
  height: 250rpx;
  width: 250rpx;
  border-radius: 100%;
  border: solid #B8B0B0 1rpx;
  box-shadow: 5rpx 5rpx 10rpx rgb(150, 150, 150);
}
.edit{
  box-shadow: 5rpx 5rpx 10rpx rgb(150, 150, 150);
  position: relative;
  left: -20rpx;
  background-color: #A1EAFB;
  width: 70rpx;
  height: 70rpx;
  padding: 10rpx;
  border-radius: 100%;
}
.profile_name{
  white-space: pre-wrap;
  font-size: 60rpx;
  font-weight:700;
  font-family:cursive;
}
.collection_text{
  display: inline-block;
  border-bottom: #bebcbc solid 1rpx;
  width: 25vh;
  font-size: small;
  color: #B8B0B0;
  margin-bottom: 3vh;
}

.collection_box{
  margin-bottom: 50rpx;
  border-radius: 20rpx;
  box-shadow: 5rpx 5rpx 10rpx #ebebeb;
  height: auto;
  width: 680rpx;
  margin-left: 40rpx;
  overflow: hidden;
}